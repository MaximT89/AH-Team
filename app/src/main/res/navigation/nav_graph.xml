<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.ahinfo.ahteam.ui.screens.project.authorization.AuthorizationFragment"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization" >
        <action
            android:id="@+id/action_authorizationFragment_to_sectionsFragment"
            app:destination="@id/sectionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ahinfo.ahteam.ui.screens.project.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment"
            app:popUpTo="@id/nav_graph.xml" />
        <action
            android:id="@+id/action_splashFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@id/nav_graph.xml"/>
        <action
            android:id="@+id/action_splashFragment_to_sectionsFragment"
            app:destination="@id/sectionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.ahinfo.ahteam.ui.screens.parser.testScreen.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" />
    <fragment
        android:id="@+id/addProjectFragment"
        android:name="com.ahinfo.ahteam.ui.screens.parser.addProject.AddProjectFragment"
        android:label="fragment_add_project"
        tools:layout="@layout/fragment_add_project" >
        <action
            android:id="@+id/action_addProjectFragment_to_listProjectsFragment"
            app:destination="@id/listProjectsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.ahinfo.ahteam.ui.screens.parser.addTaskProject.AddTaskFragment"
        android:label="fragment_add_task"
        tools:layout="@layout/fragment_add_task" />
    <fragment
        android:id="@+id/detailProjectFragment"
        android:name="com.ahinfo.ahteam.ui.screens.parser.detailsProject.DetailProjectFragment"
        android:label="fragment_detail_project"
        tools:layout="@layout/fragment_detail_project" >
        <action
            android:id="@+id/action_detailProjectFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/listProjectsFragment"
        android:name="com.ahinfo.ahteam.ui.screens.parser.listProjects.ListProjectsFragment"
        android:label="fragment_list_projects"
        tools:layout="@layout/fragment_list_projects" >
        <action
            android:id="@+id/action_listProjectsFragment_to_addProjectFragment"
            app:destination="@id/addProjectFragment" />
        <action
            android:id="@+id/action_listProjectsFragment_to_detailProjectFragment"
            app:destination="@id/detailProjectFragment" />
        <action
            android:id="@+id/action_listProjectsFragment_to_updateProjectFragment"
            app:destination="@id/updateProjectFragment" />
    </fragment>
    <fragment
        android:id="@+id/sectionsFragment"
        android:name="com.ahinfo.ahteam.ui.screens.project.sections.SectionsFragment"
        android:label="fragment_sections"
        tools:layout="@layout/fragment_sections" >
        <action
            android:id="@+id/action_sectionsFragment_to_listProjectsFragment"
            app:destination="@id/listProjectsFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateProjectFragment"
        android:name="com.ahinfo.ahteam.ui.screens.parser.updateProject.UpdateProjectFragment"
        android:label="fragment_update_project"
        tools:layout="@layout/fragment_update_project" >
        <action
            android:id="@+id/action_updateProjectFragment_to_listProjectsFragment"
            app:destination="@id/listProjectsFragment" />
    </fragment>
</navigation>