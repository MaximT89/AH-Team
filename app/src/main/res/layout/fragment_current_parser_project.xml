<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_deep_light_transparent_80"
    android:orientation="vertical"
    tools:context=".ui.screens.parser.currentParserProject.CurrentParserProjectFragment">

    <include
        android:id="@+id/title_field"
        layout="@layout/title_layout" />

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/field_state_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="5dp">

        <TextView
            android:id="@+id/text_title_field_btn_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Следующий этап парсинга:"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_download_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1. Скачать категории (из меню)"
            android:clickable="false"
            android:enabled="false"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_download_articles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:enabled="false"
            android:text="2. Скачать артикулы из категорий"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_download_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:enabled="false"
            android:text="3. Скачать параметры артикулов"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:background="@color/dark_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/field_statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingHorizontal="5dp">

        <TextView
            android:id="@+id/field_statistic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Статистика по ссылкам:"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_count_elements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_element_parsing"
            tools:text="Всего элементов: 10177" />

        <TextView
            android:id="@+id/count_elements_exist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_elements_exist"
            tools:text="В наличии: 2819" />

        <TextView
            android:id="@+id/min_price_elements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min_price_elements"
            tools:text="Минимальная цена: 190" />

        <TextView
            android:id="@+id/max_price_elements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_price_elements"
            tools:text="Максимальная цена: 495890" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:background="@color/dark_gray" />


    </LinearLayout>


</LinearLayout>