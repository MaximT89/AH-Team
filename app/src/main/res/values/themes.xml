<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AHTeam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text_title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">@color/main_deep_light</item>
    </style>

    <style name="Title_holder" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_item_holder" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Card_view_holder" parent="CardView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">15dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

</resources>